@model IEnumerable<MCFFrontend.Models.tr_bpkb>
@{
    ViewData["Title"] = "BPKB List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>@ViewData["Title"]</title>
<div style="margin-bottom:25px;">
    <a href="@Url.Action("Create", "Bpkb")" class="btn btn-success btn-sm d-inline">
        <span class="fa fa-edit"></span>&nbsp;&nbsp;Tambah
    </a>
</div>
<table class="table table-bordered table-hover table-head-fixed text-nowrap">
    <thead class="table-dark">
        <tr>
            <th style="text-align:center;">Agreement Number</th>
            <th style="text-align:center;">Branch ID</th>
            <th style="text-align:center;">BPKB No</th>
            <th style="text-align:center;">Tanggal BPKB In</th>
            <th style="text-align:center;">No. Faktur</th>
            <th style="text-align:center;">Tanggal Faktur</th>
            <th style="text-align:center;">No. Polisi</th>
            <th style="text-align:center;">Lokasi Penyimpanan</th>
            <th style="text-align:center;">Created By</th>
            <th style="text-align:center;">Created On</th>
            <th style="text-align:center;">Last Updated By</th>
            <th style="text-align:center;">Last Updated On</th>
            <th style="text-align:center;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align:middle; text-align:center;">@item.AgreementNumber</td>
                <td style="vertical-align:middle; text-align:center;">@item.BranchId</td>
                <td style="vertical-align:middle; text-align:center;">@item.BpkbNo</td>
                <td style="vertical-align:middle; text-align:center;">@item.BpkbDateIn.ToString("dd-MM-yyyy")</td>
                <td style="vertical-align:middle; text-align:center;">@item.FakturNo</td>
                <td style="vertical-align:middle; text-align:center;">@item.FakturDate.ToString("dd-MM-yyyy")</td>
                <td style="vertical-align:middle; text-align:center;">@item.PoliceNo</td>
                <td style="vertical-align:middle; text-align:center;">@item.LocationId</td>
                <td style="vertical-align:middle; text-align:center;">@item.CreatedBy</td>
                <td style="vertical-align:middle; text-align:center;">@item.CreatedOn.ToString("dd-MM-yyyy")</td>
                <td style="vertical-align:middle; text-align:center;">@item.LastUpdatedBy</td>
                <td style="vertical-align:middle; text-align:center;">@item.LastUpdatedOn.ToString("dd-MM-yyyy")</td>
                <td style="vertical-align: middle; text-align: center;">
                    <!-- Edit Button -->
                    <a style="margin-right:10px;" href="@Url.Action("Edit", "Bpkb", new { agreementNumber = item.AgreementNumber })" class="btn btn-warning btn-sm d-inline">
                        <span class="fa fa-edit"></span>&nbsp;&nbsp;Edit
                    </a>
                    <!-- Delete Button -->
                    <form asp-action="Delete" asp-controller="Bpkb" method="post" class="d-inline">
                        <input type="hidden" name="agreementNumber" value="@item.AgreementNumber" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');"> <font color="red"><span class="fa fa-trash"></span>&nbsp;&nbsp;</font>Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
