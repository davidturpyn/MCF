@model MCFFrontend.Models.tr_bpkb
@{
    ViewData["Title"] = "Edit BPKB";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2>@ViewData["Title"]</h2>
        <form asp-action="Edit" asp-controller="Bpkb" method="post">
            <input type="hidden" asp-for="AgreementNumber" />

            <div class="mb-3">
                <label asp-for="BpkbNo" class="form-label">No. BPKB</label>
                <input asp-for="BpkbNo" class="form-control" value="@Model.BpkbNo" required />
                <span asp-validation-for="BpkbNo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BranchId" class="form-label">Branch Id</label>
                <input asp-for="BranchId" class="form-control" value="@Model.BranchId" required />
                <span asp-validation-for="BranchId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BpkbDateIn" class="form-label">Tanggal BPKB</label>
                <input asp-for="BpkbDateIn" type="date" class="form-control" value="@Model.BpkbDateIn.ToString("yyyy-MM-dd")" required />
                <span asp-validation-for="BpkbDateIn" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FakturNo" class="form-label">No. Faktur</label>
                <input asp-for="FakturNo" class="form-control" value="@Model.FakturNo" />
                <span asp-validation-for="FakturNo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FakturDate" class="form-label">Tanggal Faktur</label>
                <input asp-for="FakturDate" type="date" class="form-control" value="@Model.FakturDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="FakturDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PoliceNo" class="form-label">No. Polisi</label>
                <input asp-for="PoliceNo" class="form-control" value="@Model.PoliceNo" />
                <span asp-validation-for="PoliceNo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LocationId" class="form-label">Lokasi Penyimpanan:</label>
                <select asp-for="LocationId" class="form-control" name="LocationId" required>
                    @foreach (var location in ViewBag.Locations)
                    {
                        var isSelected = location.location_id == Model.LocationId ? "selected" : "";
                        <option value="@location.location_id" selected="@isSelected">
                            @location.location_name
                        </option>
                    }
                </select>
            </div>
            <input type="hidden" name="CreatedBy" value="@ViewBag.User" />
            <input type="hidden" name="CreatedOn" value="@DateTime.Now" />
            <input type="hidden" name="BpkbDate" value="@DateTime.Now" />
            <input type="hidden" name="LastUpdatedBy" value="@ViewBag.User" />
            <input type="hidden" name="LastUpdatedOn" value="@DateTime.Now" />
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
